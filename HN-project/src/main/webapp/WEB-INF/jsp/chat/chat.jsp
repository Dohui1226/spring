<script type="text/javascript">
	var today = new Date();
	var hours = today.getHours();
	var minutes = today.getMinutes();
	var seconds = today.getSeconds();
	var year = today.getFullYear();
	var month = today.getMonth() + 1;
	var date = today.getDate();
	
	$("#sendBtn").click(
			function() {
				sendMessage();
		
				$('#message').val('')
			});

	let sock = new SockJS("http://localhost:9999/HN-project/chat/");
	sock.onmessage = onMessage;
	sock.onclose = onClose;
	// 메시지 전송
	function sendMessage() {
		
		sock.send($("#message").val());
		let htmlout = ''
			htmlout += '<div class="outgoing_msg">'
			htmlout += '<div class="sent_msg">'
			htmlout += '<p>' + $('#message').val() + '</p>'
			htmlout += '<span class="time_date">'
			htmlout += hours + ':' + minutes + ' | ' + year + '/' + month
					+ '/' + date + '</span>'
			htmlout += '</div></div>'

			$('.msg_history').append(htmlout);
	}

	// 서버로부터 메시지를 받았을 때
	function onMessage(msg) {
		var data = msg.data;
		console.log(data)
		var arr = data.split(',')

		let htmlin = ''
		htmlin += '<div class="received_msg">'
		htmlin += '<div class="received_withd_msg">'
		htmlin += '<p>' + arr[1] + '</p>'
		htmlin += '<span class="time_date">'
		htmlin += hours + ':' + minutes + ' | ' + year + '/' + month + '/'
				+ date + '</span>'
		htmlin += '</div></div>'
		$('.msg_history').append(htmlin);

	}
	// 서버와 연결을 끊었을 때
	function onClose(evt) {
		$(".msg_history").append("연결 끊김");

	}
